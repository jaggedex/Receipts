@model IEnumerable<ReceiptsWebMVCApp.Models.FoodViewModels>
@{
    ViewBag.Title = "ReceiptsView";
}

@foreach (var item in Model)
{
    <div class="well">
        <p>
            @item.Title
        </p>
        @Html.ActionLink("Промени", "Edit","Receipt", new { id = item.Id, foodType = item.FoodType, food = item.FoodType }, null)
        @Html.ActionLink("Изтрий", "Delete", "Receipt", new { id = item.Id, foodType = item.FoodType }, new { onclick = "return confirm('Сигурни ли сте, че искате да изтриете рецептата?');"})
    </div>
}

