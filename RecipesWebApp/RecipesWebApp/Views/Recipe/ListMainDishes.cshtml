@using PagedList;
@using PagedList.Mvc;
@using RecipesWebData
@model IPagedList<Recipe>
@{
    ViewBag.Title = "Основни ястия";
}

<h2>Основни ястия</h2>

@Html.DisplayFor(d => d, "_RecipeView")
@Html.PagedListPager(Model, page => Url.Action("ListMainDishes", new { page } ), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded , DisplayPageCountAndCurrentLocation = true, DisplayItemSliceAndTotal = true})