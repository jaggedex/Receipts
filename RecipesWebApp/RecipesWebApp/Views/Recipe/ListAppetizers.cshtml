@using PagedList;
@using PagedList.Mvc;
@using RecipesWebData
@model IPagedList<Recipe>
@{
    ViewBag.Title = "Предястия";
}

<h2>Предястия</h2>

@Html.DisplayFor(d => d, "_RecipeView")
@Html.PagedListPager(Model, page => Url.Action("ListAppetizers", new { page }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded , DisplayPageCountAndCurrentLocation = true, DisplayItemSliceAndTotal = true })