@using RecipesWebApp.Models
@model RecipeInputViewModel
@{
    ViewBag.Title = "Търсене по основен продукт";
}
<h2 class="text-center">Търсене по основен продукт:</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div id="custom-form">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(x => Model.Type)
            <div>
                @Html.TextBox("searchByProduct", null, new { @placeholder = "Въведи продукт" })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Търсене" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Обратно към категории", "Index")
</div>

